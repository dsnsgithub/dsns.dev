---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import scheduliIcon from "../assets/schedule.svg";
import betterHudIcon from "../assets/betterhud.png";
import { Icon } from "astro-icon/components";
import DiscordStatus from "../components/DiscordStatus.svelte";
import RecentProjects from "../components/RecentProjects.svelte";
---

<Layout title="dsns.dev" description="Check out what I do, and explore some of my projects.">
	<div class="container mx-auto flex flex-col gap-10 px-1 md:px-8 lg:px-10 xl:px-32 2xl:px-48">
		<div class="flex flex-col items-center gap-6 lg:flex-row lg:gap-12">
			<div class="flex basis-1/3 flex-col gap-4">
				<div class="m-2 rounded-lg bg-viola-100 p-8 shadow-lg">
					<h2 class="mb-4 text-2xl font-bold">Who am I?</h2>
					<p>A full-stack developer with an interest in Minecraft.</p>
				</div>

				<div class="m-2 rounded-lg bg-viola-100 p-8 shadow-lg">
					<h2 class="mb-4 text-2xl font-bold">Skills</h2>
					<div class="flex flex-row justify-evenly">
						<Icon name="mdi:language-javascript" class="text-2xl text-viola-900" title="JavaScript" aria-label="JavaScript" />
						<Icon name="mdi:language-python" class="text-2xl text-viola-900" title="Python" aria-label="Python" />
						<Icon name="mdi:language-java" class="text-2xl text-viola-900" title="Java" aria-label="Java" />
						<Icon name="mdi:git" class="text-2xl text-viola-900" title="Git" aria-label="Git" />
						<Icon name="fa6-brands:react" class="text-2xl text-viola-900" title="React" aria-label="React" />
					</div>
				</div>

				<DiscordStatus client:idle />
			</div>
			<div class="m-2 basis-2/3 rounded-lg bg-viola-100 p-8 shadow-lg">
				<h2 class="mb-4 text-2xl font-bold">Major Projects</h2>

				<div class="flex flex-col gap-4">
					<a
						href="https://scheduli.dsns.dev/"
						class="flex flex-col items-center gap-10 rounded-xl bg-viola-50 p-8 shadow-lg duration-500 hover:scale-[1.01] hover:transition hover:duration-500 sm:flex-row"
					>
						<Image
							src={scheduliIcon}
							alt="Scheduli Icon"
							width={96}
							class="aspect-square h-[96px] w-[96px] basis-1/5 rounded-xl bg-[#ddeff0] p-4 md:h-[128px] md:w-[128px]"
							loading={"eager"}
						/>

						<div class="flex basis-4/5 flex-col">
							<p class="mb-2 text-xl font-bold">Scheduli</p>
							<div>An app to track complicated school schedules, even during the most chaotic days.</div>
						</div>
					</a>
					<a
						href="https://modrinth.com/mod/betterhudfabric"
						class="flex flex-col items-center gap-10 rounded-xl bg-viola-50 p-8 shadow-lg duration-500 hover:scale-[1.01] hover:transition hover:duration-500 sm:flex-row"
					>
						<Image src={betterHudIcon} alt={`BetterHUD Icon`} width={128} class={`rounded-xl p-4 bg-viola-200 w-[128px] basis-1/5 aspect-square"`} loading={"eager"} />

						<div class="flex basis-4/5 flex-col">
							<p class="mb-2 text-xl font-bold">BetterHUD</p>
							<p>A Minecraft Fabric mod providing a HUD with essential information.</p>
						</div>
					</a>
				</div>
			</div>
		</div>

		<div class="m-2 rounded-lg bg-viola-100 p-6 px-4 shadow-lg md:px-6 lg:p-8">
			<h2 class="mb-4 text-2xl font-bold">Recently Updated Projects</h2>
			<div
				class="max-h-[100vw] overflow-y-scroll scrollbar scrollbar-track-viola-200 scrollbar-thumb-viola-300 scrollbar-track-rounded-full scrollbar-thumb-rounded-full scrollbar-w-2 lg:max-h-[30vw]"
			>
				<RecentProjects client:idle />
			</div>
		</div>
	</div>
</Layout>
